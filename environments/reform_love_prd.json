  "default_attributes": {
    "user": {
      "name":"prd",
      "password":"$1$RkPLL8JQ$tUslU.DH6TAfnMXLIxKZW0"
    },
    "apache": {
      "ports": [
        "80",
        "443"
      ],
      "projects": [
        {
          "directory":"reform_love/webroot",
          "host":"reform-love.com",
          "port": {
            "secure": "443",
