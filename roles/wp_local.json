{
  "name": "wp_local",
  "description": "local environment for wordpress",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "mysql": {
      "repository": "mysql-community-release-el6-7.noarch.rpm",
      "db_names": [
        "wp"
      ]
    },
    "git": {
      "version": "2.16.2"
    },
    "php": {
      "version": "72"
    }
  },
  "override_attributes": {
  },
  "run_list": [
    "recipe[yum]",
    "recipe[epel]",
    "recipe[remi]",
    "recipe[vbox]",
    "recipe[vim]",
    "recipe[apache]",
    "recipe[mysql]",
    "recipe[git]",
    "recipe[php]",
    "recipe[composer]",
    "recipe[wordpress]"
  ]
}
